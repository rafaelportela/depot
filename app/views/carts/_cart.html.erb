<div class="cart_title"><%= I18n.t('.title')%></div>
<table>
	
	<%= render(cart.line_items) %>
	
	<tr class="total_line">
		<td colspan="2">Total</td>
		<td class="total_cell"><%= number_to_currency cart.total_price %></td>
	</tr>
</table>
<%= button_to I18n.t('.checkout'), new_order_path, :method => :get %>
<%= button_to I18n.t('.empty'), cart, :method => :delete, :confirm => 'Are you sure?' %>
