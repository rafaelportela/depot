<!DOCTYPE html>
<html>
<head>
  <title>Pragprog Books Online Store</title>
  <%= stylesheet_link_tag "scaffold" %>
  <%= stylesheet_link_tag "depot", :media => "all" %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body id="store">
	<div id="banner">
		<%= image_tag "logo.png" %>
		<%= @page_title || I18n.t('.title') %>
	</div>
	<div id="columns">
		<div id="side">
			
			<% if @cart %>
				<%= hidden_if_empty(@cart.line_items.empty?, :id => "cart") do %>
					<%= render @cart %>
				<% end %>
			<% end %>
			
			<a href="/"><%= I18n.t('.home') %></a><br />
			<a href="/faq"><%= I18n.t('.questions') %></a><br />
			<a href="/news"><%= I18n.t('.news') %></a><br />
			<a href="/contact"><%= I18n.t('.contact') %></a><br />
			
			<% if session[:user_id] %>
				<br />
				<%= link_to 'Orders', 	orders_path %><br />
				<%= link_to 'Products', products_path %><br />
				<%= link_to 'Users', 	users_path %><br />
				<br />
				<%= button_to 'Logout', logout_path, :method => :delete %>
			<% end %>
			
		</div>
		<div id="main">
			<%= yield %>
		</div>
	</div>

</body>
</html>
